<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.thanoseventmanager">

    <!-- Autorisation pour géolocalisation approximative -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- Autorisation pour géolocalisation approximative -->
    <!--<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />-->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ThanosEventManager">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".MapViewActivity" />
        <activity android:name=".MainAfterLogin" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <!--<meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCHGb3Hz6AM5CfYmu3qI31LN-dNWxnV_Co" />-->
    </application>

</manifest>