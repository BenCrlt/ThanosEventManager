<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400sp"
    android:layout_height="100sp">

    <ImageView
        android:id="@+id/imageView_Groupe"
        android:layout_width="73dp"
        android:layout_height="75dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textView_nomGroupe"
        android:layout_width="255dp"
        android:layout_height="35sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif-black"
        android:text="Nom du groupe"
        android:textAlignment="textStart"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/imageView_Groupe"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_members"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="Nombre de membres du groupe"
        app:layout_constraintStart_toEndOf="@+id/imageView_Groupe"
        app:layout_constraintTop_toBottomOf="@+id/textView_nomGroupe" />
</androidx.constraintlayout.widget.ConstraintLayout>