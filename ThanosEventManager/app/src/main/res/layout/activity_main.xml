<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.main_activity.MainActivity">

    <fragment
        android:id="@+id/fragment_nav_host"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60dp"
        app:defaultNavHost="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navGraph="@navigation/navigation_map" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_nav_host">

        <Button
            android:id="@+id/buttonMap"
            android:layout_width="53dp"
            android:layout_height="match_parent"
            android:layout_marginRight="60dp"
            android:backgroundTint="#3F51B5"
            android:onClick="onClickFragmentMapView"
            app:icon="@drawable/ic_baseline_map_24" />

        <Button
            android:id="@+id/btn_addEvent"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="#3F51B5"
            android:onClick="onClickCreateEvent"
            app:icon="@drawable/baseline_add_box_24"
            app:iconPadding="8dp" />

        <Button
            android:id="@+id/buttonList"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="60dp"
            android:backgroundTint="#3F51B5"
            android:onClick="onClickFragmentEventList"
            app:icon="@drawable/ic_baseline_view_list_24" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>