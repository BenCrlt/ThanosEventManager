<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--When Button is in selected state -->
    <item android:state_selected="true" android:color="@android:color/holo_green_light" />
    <!--When Button is not in selected state -->
    <item android:state_selected="false" android:color="@android:color/holo_blue_light"/>
    <!--Default Background Color -->
    <item android:color="@android:color/holo_red_light" />

</selector>